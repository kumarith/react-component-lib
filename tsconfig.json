{
  "compilerOptions": {
    /* Output */
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "sourceMap": true,

    /* Module & Target */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",  // Works well with Rollup/Vite
    "jsx": "react-jsx",
    "esModuleInterop": true,

    /* Type Safety */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    /* ESM-friendly */
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true
  },
  "include": ["src", "custom-elements.d.ts"]
}
